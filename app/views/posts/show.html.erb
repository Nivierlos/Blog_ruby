<div class="well post-single">
    <h2 class="page-header"><%= @post.title %></h2>
    <small>Post by <%= @post.user.name %> on <%= @post.created_at.to_time.strftime('%B %e at %l %M %p')%></small>
    <%= image_tag  "rails3.jpg", width:'100%' %>
    <%= raw @post.body%>
</div>

