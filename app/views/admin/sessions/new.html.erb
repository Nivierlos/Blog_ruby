
      <%= form_tag admin_sessions_path, :class =>'form-signin' do  %>
         <%= image_tag  "user.jpg", class:'mb-4', width:'72', height:'72' %>
         <h2 class="h3 mb-3 font-weight-normal">rBlog</h2>
         <% if flash[:notice] %>
             <div class="alert alert-success"><%= flash[:notice] %></div>
          <% end %>
          <% if flash[:alert] %>
             <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>
         <%= text_field_tag :email, params[:email], class:'form-control', id:'inputEmail', placeholder:'Email address' %>
         <%= password_field_tag :password, params[:password],  class:'form-control', id:'inputPasswordl', placeholder:'password' %>
         <p>
           <%= submit_tag "Log in", class:'btn btn-lg btn-primary btn-block'%>
         </P>
      <% end %> 
